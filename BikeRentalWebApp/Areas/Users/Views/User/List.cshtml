@model IEnumerable<BikeRentalWebApp.Areas.Users.Models.User>
@using BikeRentalWebApp.Areas.Users
@using BikeRentalWebApp.Areas.Users.Models
@using BikeRentalWebApp.Areas.Users.Controllers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="width:90% !important;">
    <p>
            <a asp-area="Users" asp-controller="User" asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table table-hover table-str">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                 </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-area="Users" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-area="Users" asp-controller="User" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-area="Users" asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
